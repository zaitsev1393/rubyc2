%tr
  -if current_page?(controller: 'comments', action: 'index')
    %td
      =link_to name_or_email(comment), user_path(comment.user)
  %td{style: 'width: 400px'}
    =image_tag(comment.picture.category.title.to_s + '/' + comment.picture.image_identifier.to_s, class: 'small-img') if comment.picture
  %td
    =comment.text
  %td
    =time_ago_in_words comment.created_at
