!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Rubyc
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    =render 'layouts/shared/boobs'
    .lang
      =link_to_unless_current "English", locale: "en"
      =link_to_unless_current "Русский", locale: "ru"
    = yield
    =render 'layouts/shared/navbar'


  / #hidebutton
  /   Hide
  / #showbutton
  /   Show
  #logger
    .log
      ="Current_user id: #{current_user.id}" if current_user
    .log
      ="Current_user name: #{current_user.name}" if current_user
    .log
      ="Current_user email: #{current_user.email}" if current_user
    .log
      ="Prev. page: #{request.referer}"
    .log
      ="Curr. page: #{request.url}"
    .log
      ="Controller#action: #{params.to_h.values.join('#')}"
    .log
      ="Inspect: #{params.inspect}"